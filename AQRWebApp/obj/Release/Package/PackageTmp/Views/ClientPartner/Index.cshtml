<script type="text/javascript" charset="utf-8">
    var oTableClientPartner;
    var clientSection = "{";
    var partnerSection = "{";

    @{
        if (Model.Clients != null)
        {
            for (int i = 0; i <= Model.Clients.Count() - 1; i++)
            {
                <text>
                    clientSection = clientSection + "'" + '@Model.Clients[i].Id' + "':'" + '@Model.Clients[i].ClientId'  + "'";

                    if (@i < @Model.Clients.Count() - 1)
                    {
                        clientSection = clientSection + ",";
                    }
                    else {
                    clientSection = clientSection + "}";
                }
                </text>
            }
        }
    
        if (Model.Partners != null)
        {
            for (int i = 0; i <= Model.Partners.Count() - 1; i++)
            {
                <text>
                    partnerSection = partnerSection + "'" + '@Model.Partners[i].Id' + "':'" + '@Model.Partners[i].PartnerId'  + "'";

                    if (@i < @Model.Partners.Count() - 1)
                    {
                                partnerSection = partnerSection + ",";
                    }
                else {
                    partnerSection = partnerSection + "}";
                }
                </text>
            }
        }
    }

    $(document).ready(function () {
        oTableClientPartner = $("#DataTableClientPartner").DataTable({
            dom: "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span12'i><'span12 center'p>>",
            tableTools: {
                "sRowSelect": "os",
                "sSelectedClass": "selected"
            },
            "bJQueryUI": false,
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("GetList","ClientPartner")",
            "sServerMethod": "POST",
            "fnServerParams": function ( aoData ) {
                //aoData.push( { "name": "more_data", "value": "my_value" } );
            },
            "iDisplayLength": 10,
            "bAutoWidth": true,
            "sPaginationType": "full_numbers",
            "aaSorting": [[1, "asc"]],
            "bStateSave": true,
            "scrollX": true,
            "scrollCollapse": true,
            "aoColumns": [
                        {
                            "sName": "Id",
                            "sTitle": "Id",
                            "sClass": "center",
                            "sDefaultContent": "",
                            "bSearchable": false,
                            "bSortable": false,
                            "bVisible": false
                        },
                        {
                            "sTitle": "ClientId",
                            "sClass": "left",
                            "sDefaultContent": "",
                            "bSearchable": true,
                            "bSortable": true
                        },
                        {
                            "sTitle": "PartnerId",
                            "sClass": "left",
                            "sDefaultContent": "",
                            "bSearchable": true,
                            "bSortable": true
                        },
                        {
                            "sTitle": "CarrierId",
                            "sClass": "left",
                            "sDefaultContent": ""
                        },
                        {
                            "sTitle": "PartnerEDINo",
                            "sClass": "left",
                            "sDefaultContent": ""
                        },
                        {
                            "sTitle": "EDIDocCode",
                            "sClass": "left",
                            "sDefaultContent": ""
                        },
                        {
                            "sTitle": "EDIDocType",
                            "sClass": "left",
                            "sDefaultContent": ""
                        },
                        {
                            "sTitle": "Directory",
                            "sClass": "left",
                            "sDefaultContent": ""
                        }
                        
            ]
        });

        var tt = new $.fn.dataTable.TableTools(oTableClientPartner);
        $("#tableToolClientPartner").prepend(tt.fnContainer());

        $("#DataTableClientPartner").dataTable().makeEditable({
            sUpdateURL: "@Url.Action("Update","ClientPartner")",
            sDeleteURL: "@Url.Action("DeleteById","ClientPartner")",
            sDeleteRowButtonId: "btnDeleteClientPartner",

            "aoColumns": [
                            {
                                indicator: 'Saveing...',
                                tooltip: 'select gender',
                                loadtext: 'Loading...',
                                type: 'select',
                                onblur: 'submit',
                                data: clientSection
                            },
                            {
                                indicator: 'Saveing...',
                                tooltip: 'select gender',
                                loadtext: 'Loading...',
                                type: 'select',
                                onblur: 'submit',
                                data: partnerSection
                            },
                            {},
                            {},
                            {},
                            {},
                            {}
            ]
        });

        $('#DataTableClientPartner tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                oTableClientPartner.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

        $("#btnAddClientPartner").click(function (e) {
            InitialAddClientPartnerError();

            $("#formAddClientPartner")[0].reset();

            e.preventDefault();

            $('#modalformAddClientPartner').modal({
                "backdrop": "static",
                "keyboard": true,
                "show": true,
                "width": "550"
            });
        });

        $("#btnUpdateAddClientPartner").click(function () {

            if (CheckFormAddClientPartner()) {
                InitialAddClientPartnerError();

                $.ajax({
                    url: "@Url.Action("Add", "ClientPartner")",
                    type: "GET",
                    data: { name: $("input[name='ClientPartner_Name']").val() },
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    error: function () {
                        ShowAddClientPartnerError("Access denied.");
                        return false;
                    },
                    success: function (result) {
                        if (result == "") {
                            $('#modalformAddClientPartner').modal("hide");
                            oTableClientPartner.draw();
                        }
                        else {
                            ShowAddClientPartnerError(result);
                        }
                    }
                });
            }
        });

        $("#DataTableClientPartner tbody").delegate("tr td input", "click", function () {
            $.ajax({
                url: "@Url.Action("Update", "ClientPartner")",
                type: "POST",
                data: { id: $(this).closest("tr").prop("id"), value: $(this).prop("checked"), rowId: $(this).closest("tr").index(), columnPosition: $(this).closest("td").index(), columnId: null, columnName: "" },
                error: function () {
                    alert("Network connection  is error.");
                    return false;
                },
                success: function (result) {
                }
            });
        });
    });

    function InitialAddClientPartnerError() {
        $("#divAddClientPartnerError").hide();
        $("#lblAddClientPartnerError").text("");
    }

    function CheckFormAddClientPartner() {
        var check = true;
        var error = "";

        InitialAddClientPartnerError();

        if ($("input[name='ClientPartner_Name']").val() == "") {
            error = "enter the name";
            check = false;
        }

        if (!check)
            ShowAddClientPartnerError(error);

        return check;
    }

    function ShowAddClientPartnerError(text) {
        $("#divAddClientPartnerError").show();
        $("#lblAddClientPartnerError").text(text);
    }
</script>

